<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1604079628040-94301bb21b91?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-cover bg-center flex items-center justify-center">
  <div class="w-[25vw] bg-white px-20 py-10 rounded-md">
    <h1 class="text-3xl mb-10 text-center font-semibold tracking-tighter text-zinc-700 capitalize leading-none whitespace-nowrap">
      Create new account
    </h1>
    <form action="/register" method="post">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username" required>

      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="name" placeholder="Name" required>

      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email" required>

      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="tel" name="contact" placeholder="Contact" required>

      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password" required>

      <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full hover:bg-red-700 transition-colors cursor-pointer" type="submit" value="Register">
    </form>

    <p class="text-xs font-semibold text-zinc-700 mt-10 text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Get started here!</p>

    <a class="w-full inline-block font-semibold text-sm mt-7 text-zinc-700 text-center" href="/">Already have an account? Sign in</a>
  </div>
</div>

