<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1>Create a new post</h1>
    <hr class="opacity-10 mt-3">

    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block   mt-2 w-1/3 px-3 py-2 border-2 " type="file" name="postimage">
        <input class="block text-black mt-2 w-1/3 px-3 py-2 border-2 rounded-md" type="text" placeholder="Title" name="title">
        <textarea class="block text-black ht-60 mt-2 w-1/3 px-3 py-2 border-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
        <input class="mt-2 bg-red-600 block w-1/3 px-3 py-2 rounded-md " type="submit" value="Create post">
    </form>
</div>

